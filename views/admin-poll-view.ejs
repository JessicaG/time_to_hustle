<!doctype html>
<html>
  <head>
    <title>Hustle the People</title>
    <link rel='stylesheet' href='https://maxcdn.bootstrapcdn.com/bootstrap/3.3.6/css/bootstrap.min.css'>
  </head>
	<div class="col-md-12">
		<div class="col-md-6">
		  <div class="col-md-12">
		  <div id="choices">
		  <% for(var i=0; i < poll.options.length; i++){ %>
	      <div>
	        <% if(poll.options[i] != ""){ %>
	          <button type="button" class="btn btn-default btn-sm">
		  			<span class="glyphicon glyphicon-heart" aria-hidden="true"></span><%=poll.options[i]%> </button></div>
	          <div> <%= votes[poll.options[i].toUpperCase()]%> </div>
	        <% } %>
	      </div>
	    <% } %>
	    </div>
		    <div id="connection-count"></div>
		    What's your status?
		    <div id="status-message"></div>
		    
				<div class="col-md-12">
					Your vote: <div id="user-vote"></div>
				</div>
			</div>
		  <div id="polls"></div>
		  <div id="results"></div>
		</div>
	</div>
</html>